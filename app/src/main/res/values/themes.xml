<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseCalculatorStatsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BA0000</item>
        <item name="colorPrimaryVariant">#CA0000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#074B00</item>
        <item name="colorSecondaryVariant">#095D00</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/thefont</item>
    </style>


    <style name="NumberButton" parent="Widget.AppCompat.Button">
        <item name="minHeight">40dp</item>
        <item name="android:height">64dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/number_button_shape</item>
        <item name="android:textColor">@color/greenOne</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="minHeight">64dp</item>
        <item name="android:height">64dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/symbol_button_shape</item>
    </style>
</resources>